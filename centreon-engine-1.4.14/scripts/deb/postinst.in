#!/bin/sh

# Abort if any command returns an error value
set -e

case "$1" in
    configure)
	if [ "@GROUP@" != "root" ]; then
	    if ! $(grep -E "^@GROUP@:" /etc/group > /dev/null ) ; then
               groupadd -f "@GROUP@"
            fi
	fi

	if [ "@USER@" != "root" ]; then
            if ! $(grep -E "^@USER@:" /etc/passwd > /dev/null ) ; then
               useradd -d "/var/lib/centreon-engine" -M -g "@GROUP@" -s /bin/bash "@USER@"
            fi
	fi

	if [ -f "/etc/init.d/centengine" ]; then
	    update-rc.d centengine defaults
	fi

        if [ -f "/usr/lib/nagios/plugins/check_dhcp" ]; then
            chown root /usr/lib/nagios/plugins/check_dhcp
            chmod u+s /usr/lib/nagios/plugins/check_dhcp
        fi

        if [ -f "/usr/lib/nagios/plugins/check_icmp" ]; then
            chown root /usr/lib/nagios/plugins/check_icmp
            chmod u+s /usr/lib/nagios/plugins/check_icmp
        fi

        #add permission directory /var/lib/centreon-engine
        if [ -d "/var/lib/centreon-engine" ]; then
            chown -R @USER@:@GROUP@ /var/lib/centreon-engine
            chmod -R 775 /var/lib/centreon-engine
        fi

        #create directory /etc/centreon-engine
        #add permission directory /etc/centreon-engine
        if [ -d "/etc/centreon-engine" ]; then
            chown -R @USER@:@GROUP@ /etc/centreon-engine
            chmod 775 /etc/centreon-engine
        fi

        #create directory /var/lib/centreon-engine/rw
        #add permission directory /var/lib/centreon-engine/rw
        if [ ! -d "/var/lib/centreon-engine/rw" ]; then
            mkdir -p /var/lib/centreon-engine/rw
            chown -R @USER@:@GROUP@ /var/lib/centreon-engine/rw
        fi

        #create directory /var/log/centreon-engine
        #add permission directory /var/log/centreon-engine
        if [ ! -d "/var/log/centreon-engine" ]; then
            mkdir -p /var/log/centreon-engine
            chown -R @USER@:@GROUP@ /var/log/centreon-engine
        fi

        #create directory /var/log/centreon-engine/archives
        if [ ! -d "/var/log/centreon-engine/archives" ]; then
            mkdir -p /var/log/centreon-engine/archives
        fi
        
        #create file /var/log/centreon-engine/centengine.log
        if [ ! -f "/var/log/centreon-engine/centengine.log" ]; then
            touch /var/log/centreon-engine/centengine.log
        fi

	;;

    abort-upgrade|abort-remove|abort-deconfigure)
	;;

    *)
	echo "$0: called with unknown argument" 1>&2
	exit 0
	;;
esac

exit 0
